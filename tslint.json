{
  "extends": "tslint-config-airbnb",
  "rules": {
    "completed-docs": [
      true,
      {
        "enums": true,
        "methods": true,
        "interface": true
      }
    ],
    "max-line-length": [
      false,
      100
    ],
    "variable-name": {
      "options": [
        "allow-leading-underscore"
      ]
    },
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
		      "constructor",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "no-relative-imports": true
  }
}
