{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "max-len": 0,
        "linebreak-style": ["error", "windows"],
        "padded-blocks": ["error", "always", { "allowSingleLineBlocks": true }],
        "object-curly-spacing": ["error", "always"],
        "new-cap": ["error", { "newIsCap": true }]
    }
}
